<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huziyun.store.dao.UserDao">
    <insert id="insert" useGeneratedKeys="true" keyProperty="uid" >
        insert into t_user values (null,#{username},#{password},#{salt},#{phone},#{email},#{gender},#{avatar},#{isDelete},
                             #{createdUser},#{createdTime},#{modifiedUser},#{modifiedTime})
    </insert>
    <select id="findByUsername" parameterType="com.huziyun.store.entity.User" resultType="com.huziyun.store.entity.User">
        select * from t_user where username = #{username}
    </select>



</mapper>